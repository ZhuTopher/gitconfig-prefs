[alias]
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --branches --tags --remotes
	adog = log --all --decorate --oneline --graph
	co = checkout
	st = status
	up = remote update -p
	ff = merge --ff-only
	amend = commit --amend --no-edit
	addall = add --no-ignore-removal
	merge-commit = merge --commit --no-ff
[push]
        default = upstream
        followTags = true
[merge]
        defaultToUpstream = true
